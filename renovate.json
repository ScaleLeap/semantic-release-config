{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "schedule:weekdays"
  ],
  "labels": [
    "renovatebot"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^@semantic-release/"
      ],
      "semanticCommitType": "fix"
    },
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}